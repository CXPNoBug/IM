<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_sms_group_send_list_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/new_white"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp20"
    android:paddingTop="@dimen/dp10"
    android:paddingEnd="@dimen/dp20"
    android:paddingBottom="@dimen/dp10">

    <com.cxp.im.widget.CircleImageView
        android:id="@+id/item_sms_group_send_list_img"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:src="@mipmap/ic_default_avatar" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginTop="@dimen/dp4"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_sms_group_send_list_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包子、拉伯"
            android:textColor="@color/new_black"
            android:textSize="@dimen/sp16" />


        <TextView
            android:id="@+id/item_sms_group_send_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3"
            android:text="明天把计划发给我"
            android:textColor="@color/new_color_CCCCCC"
            android:textSize="@dimen/sp13" />

    </LinearLayout>


    <TextView
        android:id="@+id/item_sms_group_send_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp4"
        android:text="下午2:20"
        android:textColor="@color/new_color_CCCCCC"
        android:textSize="@dimen/sp13" />


</LinearLayout>