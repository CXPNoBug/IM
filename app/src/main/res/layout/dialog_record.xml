<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rc_audio_ll"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_voice_popup"
        android:orientation="vertical">


        <TextView
            android:id="@+id/rc_audio_state_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/rc_audio_state_image"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/rc_audio_state_time"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textSize="70sp"/>

        <TextView
            android:layout_marginBottom="@dimen/dp20"
            android:id="@+id/rc_audio_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>
</FrameLayout>