<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp47"
    android:layout_height="@dimen/dp47"
    android:layout_marginRight="@dimen/dp10">

    <TextView
        android:id="@+id/item_selected_contacts_head_avatar"
        android:layout_width="@dimen/dp42"
        android:layout_height="@dimen/dp42"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/sp12"
        android:gravity="center"
        android:textColor="@color/new_white"
        android:layout_gravity="left|bottom"
        android:background="@drawable/shape_head_avatar"/>

    <ImageView
        android:id="@+id/item_selected_contacts_head_remove"
        android:layout_width="@dimen/dp25"
        android:layout_height="@dimen/dp25"
        android:layout_gravity="right|top"
        android:paddingLeft="@dimen/dp5"
        android:paddingBottom="@dimen/dp5"
        android:src="@mipmap/icon_remove" />


</FrameLayout>